// 游戏登录界面的账号密码输入框样式以及登录按钮样式
.username
  width 100%
  height 40px
  margin-bottom 10px
  padding 0 10px
  border 1px solid #ccc
  border-radius 5px
  font-size 16px
  outline none
  &:focus
    border-color #00a1d6
    box-shadow 0 0 5px #00a1d6

.password
  width 100%
  height 40px
  margin-bottom 20px
  padding 0 10px
  border 1px solid #ccc
  border-radius 5px
  font-size 16px
  outline none
  &:focus
    border-color #00a1d6
    box-shadow 0 0 5px #00a1d6

.login_btn
  width 100%
  height 40px
  background-color #00a1d6
  color #fff
  border none
  border-radius 5px
  font-size 16px
  cursor pointer
  outline none
  &:hover
    background-color #0088a3
  &:active
    background-color #006e87
  &:disabled
    background-color #ccc
    cursor not-allowed
