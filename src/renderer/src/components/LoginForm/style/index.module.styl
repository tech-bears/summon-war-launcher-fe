.login_btn
  width 100%
  height 40px
  background-color #00a1d6
  color #fff
  border none
  border-radius 5px
  font-size 16px
  cursor pointer
  outline none
  transition all 0.3s ease
  &:hover
    background-color #0088a3
  &:active
    background-color #006e87
  &:disabled
    background-color #ccc
    cursor not-allowed
.login_tab
  display flex
  margin-bottom 20px
  .login_tab_item
    font-weight 700
    flex 1
    height 40px
    line-height 40px
    text-align center
    font-size 22px
    cursor pointer
    color #f0ecf3
    text-shadow 0 0 5px #09303d
